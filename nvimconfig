call plug#begin('~/.vim/plugged')
Plug 'morhetz/gruvbox'
Plug 'preservim/nerdtree'
Plug 'itchyny/lightline.vim'
Plug 'tpope/vim-fugitive'
Plug 'junegunn/fzf', {'dir': '~/.fzf','do': './install --all'}
Plug 'junegunn/fzf.vim' " needed for previews
call plug#end()

map <F9> :w <CR>  :!clear && gcc -Wall -Werror -Wextra % && ./a.out<CR>
map <F10> :w <CR>  :!clear && gcc -Wall -Werror -Wextra *.c && ./a.out<CR>
map <F11> :w <CR> :!clear && norminette -R CheckForbiddenSourceHeader % <CR>
set noerrorbells
highlight CocErrorSign ctermfg=15 ctermbg=196
highlight CocWarningSign ctermfg=0 ctermbg=172

nnoremap <leader>r :Rg! <CR>
nnoremap <leader>f :FZF <CR>
nnoremap <leader>h :History <CR>
nnoremap <leader>i :vimgrep  */*<Left><Left><Left><Left>



set ruler
set colorcolumn=80
highlight ColorColumn guibg=lightblue
set number
colorscheme gruvbox
let g:gruvbox_contrast_dark = 'hard'
set modifiable

let mapleader=" "

set noswapfile
set nobackup
set autoread
set hidden
set confirm
set cursorcolumn
set clipboard=unnamed,unnamedplus

set list listchars=tab:»-,trail:-,eol:$,extends:»,precedes:«,nbsp:%

set showmatch

" auto complete?
inoremap " ""<left>
inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
inoremap {<CR> {<CR>}<ESC>O
inoremap {;<CR> {<CR>};<ESC>O

" nerd tree remap
nmap <C-f> :NERDTreeToggle<CR>
nmap <C-u> :cnext <CR>
nmap <C-y> :cprevious <CR>
nmap <C-t> :copen <CR>


set relativenumber
set nu

set nohlsearch

set hidden

set incsearch

set scrolloff=8
set cursorline


syntax on

set tabstop=4
set shiftwidth=4

set termguicolors
set bg=dark

autocmd VimEnter * NERDTree
autocmd bufenter * if(winnr("$") == 1 && exists("b:NERDTree") && b:NERDTree.isTabTree()) | q | endif

"Shorcutting split navigation
map <C-h>  <C-w>h
map <C-j>  <C-w>j
map <C-k>  <C-w>k
map <C-l>  <C-w>l
map <C-g> <C-w>


let data_dir = has('nvim') ? stdpath('data') . '/site' : '~/.vim'
if empty(glob(data_dir . '/autoload/plug.vim'))
	silent execute '!curl -fLo '.data_dir.'/autoload/plug.vim --create-dirs
	https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'
	autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif
